@model IEnumerable<test_app.Models.DocProcedure>

<h1>DocProcedures</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>DocId</th>
        <th>ProcId</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var docProcedure in Model)
    {
        <tr>
            <td>@docProcedure.Id</td>
            <td>@docProcedure.DocId</td>
            <td>@docProcedure.ProcId</td>
            <td>
                <a asp-action="Edit" asp-route-id="@docProcedure.Id" class="btn btn-primary">Edit</a>
                <form asp-action="Delete" method="post" style="display: inline;">
                    <input type="hidden" name="id" value="@docProcedure.Id"/>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
