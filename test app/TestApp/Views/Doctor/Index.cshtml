@model IEnumerable<test_app.Models.Doctor>

<h1>Doctors</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Specializations</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doctor in Model)
        {
            <tr>
                <td>@doctor.Id</td>
                <td>@doctor.Name</td>
                <td>
                    @if (doctor.Specializations != null && doctor.Specializations.Any())
                    {
                        foreach (var specialization in doctor.Specializations)
                        {
                            <span>@specialization</span><br />
                        }
                    }
                    else
                    {
                        <span>No Specializations</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@doctor.Id" class="btn btn-primary btn-sm">Edit</a>
                    <form asp-action="Delete" method="post" style="display: inline;">
                        <input type="hidden" name="id" value="@doctor.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Create New</a>
