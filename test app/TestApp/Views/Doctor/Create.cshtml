@model test_app.Models.Doctor

<h1>Create Doctor</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Specializations" class="control-label">Specialization</label>
        <select asp-for="Specializations" class="form-control">
            <option value="">-- Select specialization --</option>
            @foreach (var specialization in Enum.GetValues(typeof(Specialization)))
            {
                <option value="@specialization">@specialization</option>
            }
        </select>
        <span asp-validation-for="Specializations" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<div>
