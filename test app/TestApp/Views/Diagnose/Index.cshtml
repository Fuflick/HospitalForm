@model IEnumerable<test_app.Models.Diagnose>

<h1>Diagnoses</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>ID</th>
        <th>Body</th>
        <th>Date</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var diagnose in Model)
    {
        <tr>
            <td>@diagnose.Id</td>
            <td>@diagnose.Body</td>
            <td>@diagnose.Date</td>
            <td>
                <a asp-action="Edit" asp-route-id="@diagnose.Id" class="btn btn-primary">Edit</a>
                <form asp-action="Delete" method="post" style="display: inline;">
                    <input type="hidden" name="id" value="@diagnose.Id" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>