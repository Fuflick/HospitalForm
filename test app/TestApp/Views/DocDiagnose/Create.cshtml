@model DocDiagnose

@{
    ViewBag.Title = "Create";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Create", "DocDiagnose", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.DocId, htmlAttributes: new { @class = "control-label" })
        @Html.DropDownListFor(model => model.DocId, (IEnumerable<SelectListItem>)ViewBag.DoctorsList, "Select Doctor", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.DocId, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DiagId, htmlAttributes: new { @class = "control-label" })
        @Html.DropDownListFor(model => model.DiagId, (IEnumerable<SelectListItem>)ViewBag.DiagnosesList, "Select Diagnosis", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.DiagId, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
}