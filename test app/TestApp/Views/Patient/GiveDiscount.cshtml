@model test_app.Models.Patient

<h1>Delete Patient</h1>

<h3>Are you sure you want to give discount 10% for tis patient</h3>
<div>
    <h4>Patient</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Gender</dt>
        <dd class="col-sm-10">@Model.Gender</dd>
    </dl>
    <form asp-action="DiscountConfirmed" method="post" style="display: inline;">
        <input type="hidden" name="patientId" value="@Model.Id"/>
        <button type="submit" class="btn btn-danger btn-sm"> Give low price</button>
    </form>
</div>
